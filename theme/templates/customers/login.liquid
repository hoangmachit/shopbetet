<div id="recover" class="page__login">
  <nav class="main__breadcumb" aria-label="Breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/">Trang chủ</a>
      </li>
      <li class="breadcrumb-item">
        <a href="/account">Tài khoản</a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">Đăng nhập</li>
    </ol>
  </nav>
  <div class="page__login--form">
    <div class="wrapper__form">
      {% form 'customer_login' %}
        <div class="page__login--heading">
          <h1>Đăng nhập tài khoản</h1>
        </div>
        {{ form.errors | default_errors }}
        <div class="c-form">
          <label for="customer_email" class="c-label">Email</label>
          <input
            type="text"
            class="c-control"
            placeholder="your_email@gmail.com"
            name="customer[email]"
            id="customer_email" />
        </div>
        <div class="c-form">
          <label for="customer_password" class="c-label">Mật khẩu</label>
          <input
            type="password"
            class="c-control"
            placeholder="******"
            name="customer[password]"
            id="customer_password" />
        </div>
        <div class="c-remember-forgot">
          <div class="c-remember">
            <input
              type="checkbox"
              id="remember"
              value="1">
            <label for="remember">Nhớ mật khẩu</label>
          </div>
          <div class="c-forgot">
            <a href="/account/login#recover">Quên mật khẩu</a>
          </div>
        </div>
        <div class="c-form">
          <button class="btn btnLogin" type="submit">
            Đăng nhập tài khoản
          </button>
        </div>
        <div class="c-register">
          <p>Đăng ký tài khoản mới</p>
          <a href="/account/register">tại đây.</a>
        </div>
      {% endform %}
      <div class="formLoginSocial">
        <div class="formLoginSocial__heading">
          <h3 class="formLoginSocial__heading--title">Đăng nhập bằng tài khoản khác</h3>
        </div>
        <div class="formLoginSocial__list">
          <ul>
            <li>
              <form
                action="#"
                method="POST"
                role="form">
                <button
                  type="submit"
                  class="btn__social"
                  disabled><img src="data:image/svg+xml;base64," alt="">Đăng nhập Google</button>
              </form>
            </li>
            <li>
              <form
                action="#"
                method="POST"
                role="form">
                <button
                  type="submit"
                  class="btn__social"
                  disabled><img src="data:image/svg+xml;base64," alt="">Đăng nhập Facebook</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="page__forgot">
  <nav class="main__breadcumb" aria-label="Breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/">Trang chủ</a>
      </li>
      <li class="breadcrumb-item">
        <a href="/">Tài khoản</a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">Lấy lại mật khẩu</li>
    </ol>
  </nav>
  <div class="page__forgot--form">
    <div class="wrapper__form">
      {% form 'recover_customer_password' %}
        <div class="page__forgot--heading">
          <h1>Lấy lại mật khẩu</h1>
        </div>
        {{ form.errors | default_errors }}
        <div class="c-form">
          <label for="email" class="c-label">Email</label>
          <input
            type="text"
            class="c-control"
            placeholder="your-email@gmail.com"
            name="email"
            id="email" />
        </div>
        <div class="c-form">
          <button class="btn btnForgot" type="submit">
            Xác nhận email
          </button>
        </div>
        <div class="c-login">
          <p>Đăng nhập tài khoản
          </p>
          <a href="/account/login">tại đây.</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>